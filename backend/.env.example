# Environment variables for Maritime Fleet Tracking System
# Copy this file to .env and fill in your values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (MySQL)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=maritime_fleet
DB_PORT=3306

# JWT Secret Key (use a strong random string in production)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Weather API (optional - uses mock data if not set)
# Get a free API key at https://openweathermap.org/api
WEATHER_API_KEY=

# For production deployment on Railway/Render
# These will be set automatically by the hosting platform
# DATABASE_URL=mysql://user:password@host:port/database
